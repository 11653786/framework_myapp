    </LinearLayout>

    <LinearLayout
            style="@style/homt_linear_style">
        <Button
                style="@style/home_buton_style"
                android:id="@+id/yuanxijieshao"
                android:text="@string/yuanxijieshao"
                android:background="@drawable/button_5"
                />

        <Button
                android:id="@+id/tesezhuanye"
                android:text="@string/tesezhuanye"
                style="@style/home_buton_style"
                android:background="@drawable/button_9"
                />

        <!--不显示却站地方-->
