                android:text="@string/news"
                />

        <Button
                android:id="@+id/xuexiaogaikuang"
                android:text="@string/xuexiaogaikuang"
                style="@style/home_buton_style"
                android:background="@drawable/button_3"
                />

        <Button
                android:id="@+id/xiaoyuanfengcai"
